<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Vatee.MainWindow"
        Title="File Picker App" Width="400" Height="200">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
        <Button Name="OpenFileButton" Content="Open File" Width="150" Click="OpenFileButton_Click"/>
        <TextBlock Name="SelectedFilePathTextBlock" Text="No file selected" />
        <Button Name="SaveFileButton" Content="Save Processed File" Width="150" Click="SaveFileButton_Click" IsEnabled="False"/>
    </StackPanel>
</Window>