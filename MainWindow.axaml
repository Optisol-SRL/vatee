<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vatee="clr-namespace:Vatee"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="400" Width="500" Height="400"
        x:Class="Vatee.MainWindow"
        Title="Extrage detalii din P300 - v.0.2.0">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
        <TextBlock Text="v.0.2.0 - Detalii și instrucțiuni"
                   Foreground="Blue"
                   TextDecorations="Underline"
                   Cursor="Hand"
                   HorizontalAlignment="Center"
                   Margin="0 10 0 0"
                   Tapped="OnLinkTapped" />
        <TabControl>

            <TabItem Header="Extrage din PDF">
                <Border Padding="10">
                    <vatee:TabPdfExtract />
                </Border>
            </TabItem>

            <TabItem Header="Preia prin API">
                <vatee:TabApiPull />
            </TabItem>
        </TabControl>
    </StackPanel>
</Window>